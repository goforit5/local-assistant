# ============================================
# AI Provider API Keys
# ============================================
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
GOOGLE_API_KEY=AI...

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://assistant:assistant@localhost:5432/assistant
REDIS_URL=redis://localhost:6379/0

# ChromaDB Vector Store
CHROMA_HOST=localhost
CHROMA_PORT=8000

# ============================================
# Observability & Monitoring
# ============================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
JAEGER_PORT=16686

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=local-assistant

# ============================================
# Cost Limits & Alerts
# ============================================
COST_LIMIT_PER_REQUEST=1.00
COST_LIMIT_PER_HOUR=10.00
COST_LIMIT_PER_DAY=50.00

# Cost alerts (warn before blocking)
COST_WARN_PER_REQUEST=0.50
COST_WARN_PER_HOUR=5.00
COST_WARN_PER_DAY=20.00

# ============================================
# Computer Use / Responses API Safety
# ============================================
COMPUTER_USE_SANDBOX=true
REQUIRE_CONFIRMATION_FOR_SENSITIVE=true

# Allowed domains (comma-separated, supports wildcards)
COMPUTER_USE_ALLOWED_DOMAINS=github.com,*.google.com,stackoverflow.com

# Blocked domains
COMPUTER_USE_BLOCKED_DOMAINS=*.facebook.com,*.tiktok.com

# Screenshot storage
SCREENSHOT_DIR=./data/screenshots
SCREENSHOT_RETENTION_DAYS=7
SCREENSHOT_MAX_SIZE_MB=100

# ============================================
# Vision Service Configuration
# ============================================
# OCR Engine (pytesseract or easyocr)
OCR_ENGINE=pytesseract
OCR_LANGUAGES=eng
OCR_CONFIDENCE_THRESHOLD=0.85

# Document processing
DOCUMENT_CACHE_DIR=./data/documents
DOCUMENT_MAX_SIZE_MB=10

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true
LOG_FILE=./data/logs/assistant.log

# ============================================
# Application Settings
# ============================================
# Environment (development, production)
ENVIRONMENT=development

# Default routing strategy (capability_based, quality_first, cost_optimized, speed_first)
DEFAULT_ROUTING_STRATEGY=capability_based

# Session timeout (seconds)
SESSION_TIMEOUT=3600

# Max concurrent tasks for orchestrator
MAX_CONCURRENT_TASKS=3
